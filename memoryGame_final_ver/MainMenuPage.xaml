<Page x:Class="memoryGame.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:memoryGame"
      mc:Ignorable="d" 
      d:DesignHeight="600
      " d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="001-BackGroundMainMenu01.png"/>
        </Grid.Background>
        <Button x:Name="buttonPlay" HorizontalAlignment="Left" Margin="247,280,0,0" VerticalAlignment="Top" Width="292" Height="47" BorderBrush="#FF321A1A" Foreground="White" Click="PlayButton" FontSize="24" >
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
            <Image Height="63" Source="001-MainMenuPlayButton.png" Stretch="Fill" Width="334"/>
        </Button>
        <Button HorizontalAlignment="Left" Margin="247,350,0,0" VerticalAlignment="Top" Width="292" Height="47" BorderBrush="#FF321A1A" Foreground="White" Background="#FF5D224A" Click="QuitButton" FontSize="24">
            <Image Height="63" Source="002-MainMenuExitButton.png" Stretch="Fill" Width="334"/>
        </Button>
    </Grid>
</Page>
